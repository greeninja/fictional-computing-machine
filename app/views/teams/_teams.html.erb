<% if @teams.count >= 1 %>
<table class="table table-hover" data-sort-name="Name" data-sort-order="desc">
  <thead>
    <tr>
      <th data-field="ID" data-sortable="true">ID</th>
      <th data-field="Name"data-sortable="true">Name</th>
      <th>Users</th>
      <th>Rats</th>
      <th>Ticks</th>
      <th data-field="Descrition" data-sortable="true">Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.name %></td>
        <td><span class="label label-info"><%= team.agents.count %></span></td>
        <td><span class="label label-warning"><%= team.rats.where('rats.created_at BETWEEN ? AND ?', @date_from, @date_to).count %></span></td>
        <td><span class="label label-success"><%= team.ticks.where('ticks.created_at BETWEEN ? AND ?', @date_from, @date_to).count %></span></td>
        <td><%=h truncate(team.description, :length => 100) %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', {:action => "show", :id => team.id, :date_from => @date_from, :date_to => @date_to}, :class => "btn btn-sm btn-default" %>
            <button data-toggle="dropdown" class="btn btn-sm btn-default dropdown-toggle">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Edit Team', edit_team_path(team) %>
              </li>
              <li>
              <%= link_to 'Show Team', {:action => "show", :id => team.id, :date_from => @date_from, :date_to => @date_to} %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>

<h4>You have no teams configured</h4>
<p>Click below to add teams</p>
<% end %>
