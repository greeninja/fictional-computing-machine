<div class="media well">
  <%= image_tag("cross.png", :alt => "crosses", :class => "pull-left") %>
  <div class="media-body">
    <h4 class="text-center text-muted">Crosses</h4>
    <% if defined?(just_agent) %>
      <% get_cross_percentages(@agent) %>
        <p><strong><font color="orange"><%= @cnumber_of %> Crosses</font></strong> making up <strong><%= @cpercent %>% </strong> of your teams total.<br />
        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= @cpercent %>%;">
            <%= @cnumber_of %>
          </div>
    <% else %>
      <p>Total Crosses between <%= @date_from.to_s(:long) %> and <%= @date_to.to_s(:long) %> for <%= @team.name %><br />
      <div class="progress">
        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 100%;">
          <%= @team_crosses %>
        </div>
    <% end %>
    </div>
    <%# link_to("Show", {:controller => 'agents', :action => "show", :id => @current_user.agent_id}, :class => "btn btn-xm btn-default pull-right") %>
  </div>
</div>
