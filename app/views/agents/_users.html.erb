<table class="table table-hover table-responsive" data-sort-name="Name" data-sort-order="desc">
  <thead>
    <tr>
      <th data-field="Custom ID" data-sortable="true">ID</th>
      <th data-field="Name"data-sortable="true">Name</th>
      <th data-field="Last Name" data-sortable="true">Last Name</th>
      <th data-field="Team" data-sortable="true">Team</th>
      <th data-field="Rats" data-sortable="true">RaTs</th>
      <th data-field="Tick" data-sortable="true">TiCKs</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% users.each do |user| %>
    <% if user.disabled? %>
      <tr class="danger" >
    <% else %>
      <tr>
    <% end %>
        <td><%= user.customid %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td>
          <% if user.team_id.present? %>
            <%= user.team.name %></td>
        <% else %>
          Not Set
        <% end %>
        <% if user.rats.where('rats.created_at BETWEEN ? AND ?', @date_from, @date_to).count >= 1 %>
          <td><span class="label label-warning"><%= user.rats.where('rats.created_at BETWEEN ? AND ?', @date_from, @date_to).count %></span></td>
        <% else %>
          <td></td>
        <% end %>
        <% if user.ticks.where('ticks.created_at BETWEEN ? AND ?', @date_from, @date_to).count >= 1 %>
          <td><span class="label label-success"><%= user.ticks.where('ticks.created_at BETWEEN ? AND ?', @date_from, @date_to).count %></span></td>
        <% else %>
          <td></td>
        <% end %>
        <% unless user.disabled? %>
          <td><%= button_to("New RaT", {:action => 'rat', :id => user.id}, :class => "btn btn-sm btn-warning") %></td>
          <td><%= button_to("New TiCK", {:action => 'tick', :id => user.id}, :class => "btn btn-sm btn-success") %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', {:action => "show", :id => user.id, :date_from => @date_from, :date_to => @date_to}, :class => "btn btn-sm btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
