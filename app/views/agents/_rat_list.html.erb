  <h3 class="text-center text-muted">RaTs</h3>
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr>
      <% @rat_types.each do |type| %>
        <th><%= type.name %></th>
      <% end %>
        <th>Notes</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>

    <% @user.rats.sorted.where('rats.created_at BETWEEN ? AND ?', @date_from, @date_to).each do |rat| %>
      <tr>
      <% @rat_types.sorted.each do |type| %>
        <% if rat.rat_type_id == type.id %>
          <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></td>
        <% else %>
          <td></td>
        <% end %>
      <% end %>
      <td><%= rat.notes %></td>
      <td><%= rat.created_at.localtime.to_s(:short) %></td>
      <td><%= button_to "Delete", agent_rat_path(@user, rat), data: {:confirm => "Are you sure?"}, :class => "btn btn-xs btn-danger", :method => :delete %>
    </tr>
    <% end %>
  </table>
