<% if @user.rats.count < 1 and @user.ticks.count < 1 %>
  <%= render "success", message: "User #{@user.name} #{@user.last_name} has No TiCKs or RaTs" %>
<% else %>

  <%= render "daterange" %>

  <% if params[:highlight_rat].present? %>
    <%= render 'info', message: "The Rat you selected from the audit log should be highlighted below" %>
  <% elsif params[:highlight_tick].present? %>
    <%= render 'info', message: "The Tick you selected from the audit log should be highlighted below" %>
  <% end %>

  <% if @user.rats.count >= 1 %>
    <% if @rat_enabled.enabled %>
      <%= render "rat_list", date_from: @date_from, date_to: @date_to %>
    <% else %>
      <%= render "warning", message: "This is using the old model without dynamic settings!" %>
    <% end %>
  <% end %>

  <% if @user.ticks.count >= 1 %>
    <% if @tick_enabled.enabled %>
      <%= render "tick_list", date_from: @date_from, date_to: @date_to %>
    <% else %>
      <%= render "warning", message: "This is using the old model without dynamic settings!" %>
    <% end %>
  <% end %>
<% end %>
