<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <%= render "form_error" %>
  <% end %>

<div class="row">
  <div class="col-md-12">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="inputFirstName" class="col-sm-2 control-label">
          <%= f.label "First Name" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :first_name, :class => "form-control", :id => "inputFirstName" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputLastName" class="col-sm-2 control-label">
          <%= f.label "Last Name" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :last_name, :class => "form-control", :id => "inputLastName" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputUserName" class="col-sm-2 control-label">
          <%= f.label "Username" %>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :username, :class => "form-control", :id => "inputUserName" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputeMail" class="col-sm-2 control-label">
          <%= f.label "eMail" %>
        </label>
        <div class="col-sm-10">
          <%= f.email_field :email, :class => "form-control", :id => "inputeMail" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputRole" class="col-sm-2 control-label">
          <%= f.label "User Role" %>
        </label>
        <div class="col-sm-10">
          <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, {}, {:class => "form-control", :id => "inputrole"}) %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">
          <%= f.label "Password" %>
        </label>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => "form-control", :id => "inputPassword" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit :Submit, :class => "btn btn-success pull-right"  %>
        </div>
      </div>
    </form>
  </div>
</div>
<% end %>

