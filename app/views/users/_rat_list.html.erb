  <h3 class="text-center text-muted">RaTs</h3>
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <tr>
      <% @rat_types.each do |type| %> 
        <th><%= type.name %></th>
      <% end %>
        <th>Notes</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>

  <% @user.rats.sorted.each do |rat| %>
    <tr>
      <% if rat.longbreak? %>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      <% else %>
        <td></td>
      <% end %>
      <% if rat.latebreak? %>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      <% else %>
        <td></td>
      <% end %>
      <% if rat.offtask? %>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      <% else %>
        <td></td>
      <% end %>
      <td><%= rat.other %></td>
      <td><%= rat.created_at.localtime.to_s(:short) %></td>
      <td><%= button_to "Delete", user_rat_path(@user, rat), data: {:confirm => "Are you sure?"}, :class => "btn btn-xs btn-danger", :method => :delete %></th>
    </tr>
  <% end %>
  </table>
