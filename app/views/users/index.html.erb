<p id="notice"><%= notice %></p>

<h3>Resource and Timekeeping System</h3> 

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last Name</th>
      <th>Team</th>
      <th>RaTS</th>
      <th>TiCK</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="active">
        <td><%= link_to user.name, user %></td>
        <td><%= link_to user.last_name, user %></td>
        <td><%= user.team %></td>
        <td><%= link_to user.rats.count, user %></td>
        <td><%= link_to user.ticks.count, user %></td>
        <td><%= button_to("New Rat", {:action => 'rat', :id => user.id}, :class => "btn btn-primary") %></td>
        <td><%= button_to("New TiCK", {:action => 'tick', :id => user.id}, :class => "btn btn-warning") %></td>
        <td>
          <div class="btn-group">
            <button class="btn btn-default">
              Action
            </button>
            <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Edit', edit_user_path(user) %>
              </li>
              <li>
                <%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New User', new_user_path, :class => "btn btn-default" %>
