<div class="row">
  <div class="col col-sm-2">
  </div>
  <div class="col col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="text-center text-muted">Broadcasts</h3></div>
        <div class="panel-body">
          <ul class="list-group">
            <% if @broadcasts.count >= 1 %>
              <% @broadcasts.each do |broadcast| %>
                <%= render "broadcast", broadcast: broadcast %>
              <% end %>
            <% else %>
              <h3>No Broadcasts</h3>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
