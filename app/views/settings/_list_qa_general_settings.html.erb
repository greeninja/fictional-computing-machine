<h3 class="text-center text-muted">QA General Settings</h3>
<table class="table table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Team</th>
      <th>Disabled</th>
      <th>Actions</th>
    </tr>

    <% @setting.qa_general_settings.each do |qa| %>
      <tr>
        <td><%= qa.name %></td>
        <td><%= qa.value %></td>
        <td><%= qa.team_id? ? qa.team.name : "All teams" %></td>
        <td><%= qa.disabled? ? ('<span class="glyphicon glyphicon-ok"></span>').html_safe : "" %></td>
        <td>
          <div class="btn-group">
            <%= link_to "Edit", edit_setting_qa_general_setting_path(@setting, qa), :class => "btn btn-sm btn-default" %>
            <button data-toggle="dropdown" class="btn btn-sm btn-default dropdown-toggle">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
              <%= link_to "Delete", qa, method: :delete, data: { confirm: "Are you sure? This might cause errors in the QA section." } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
</table>

