<%= form_for(setting) do |f| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-8">
    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="inputName">
          <%= f.label "Setting Name" %>
        </label>
          <%= f.text_field :name, :class => "form-control", :id => "inputName" %>
      </div>
      <div class="form-group">
        <label for="inputDescription">
          <%= f.label "Description" %>
        </label>
        <%= f.text_area :description, :class => "form-control", :id => "inputDescription", :size => "1x4" %>
      </div>
      <div class="form-group">
          <label for="inputEnabled">
            <%= f.label "Enabled" %>
          </label>
          <%= f.check_box :enabled, :class => "checkbox"  %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit :Submit, :class => "btn btn-success pull-right"  %>
        </div>
      </div>
    </form>
  </div>
</div>
<% end %>
