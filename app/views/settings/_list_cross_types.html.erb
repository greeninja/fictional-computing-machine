<% if @cross_types.count >= 1 %>

<h3 class="text-center text-muted">Cross Types Settings</h3>
<table class="table table-hover table-condensed table-bordered table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>

    <% @setting.cross_types.sorted.each do |cross| %>
      <tr>
        <td><%= cross.name %></td>
        <td><%= cross.description %></td>
        <td>
          <div class="btn-group">
            <%= link_to "Edit", edit_setting_cross_type_path(@setting, cross), :class => "btn btn-sm btn-default" %>
            <button data-toggle="dropdown" class="btn btn-sm btn-default dropdown-toggle">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
              <%= link_to "Delete", cross, method: :delete, data: { confirm: "Are you sure? This will cause issues if there are crosses applied to Agents." } %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
</table>

<% else %>
  <p><strong>There are currently no settings for this model</strong></p>
<% end %>

