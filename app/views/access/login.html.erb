<% if notice.present? %>
  <%= render "success", message: notice %>
<% end %>
<% if flash[:warning] %>
  <%= render "warning", message: flash[:warning] %>
<% end %>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>Login to RaTS</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= form_tag({:action => 'attempt_login'}, {:class => "form-horizontal", :role => "form"}) do %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= text_field_tag :username, "", :class => "form-control", :id => "inputUsername3", :placeholder => "Username" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= password_field_tag :password, "", :class => "form-control", :id => "inputPassword3", :placeholder => "Password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <div class="checkbox">
              <label>
                <input type="checkbox" /> Remember me
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= submit_tag("Log In", :class => "btn btn-default") %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-8">
    </div>
  </div>
</div>
