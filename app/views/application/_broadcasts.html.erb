<li class="<%= 'active' if params[:controller] == 'activities' %>">
  <%= link_to root_path do %>
    <% if @current_user.id? %>
      <span class="glyphicon glyphicon-bell">
        Broadcasts
      </span>
    <% else %>
      <span class="label label-pill label-danger"> <%= User.count %></span>
        Broadcasts
      </span>
    <% end %>
  <% end %>
</li>
