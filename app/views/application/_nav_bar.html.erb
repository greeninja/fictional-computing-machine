            <% end %>
            </li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<strong class="caret"></strong></a>
              <ul class="dropdown-menu">
                <% if policy(Setting).index? %>
                  <li>
                    <%= link_to("Settings", :controller => 'settings') %>
