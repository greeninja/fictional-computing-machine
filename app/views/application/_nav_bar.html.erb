          </button> <a class="navbar-brand" href="/">RaTS</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <% if policy(Agent).index? %>
              <li class="<%= 'active' if params[:controller] == 'agents' %>">
                <%= link_to("Agents", :controller => 'agents') %>
              </li>
            <% end %>
            <% if policy(Team).index? %>
              <li class="<%= 'active' if params[:controller] == 'teams' %>">
                <%= link_to("Teams", :controller => 'teams') %>
