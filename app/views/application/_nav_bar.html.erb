                  <li>
                    <%= link_to("Manage Users", :controller => 'users') %>
                  </li>
                <% end %>
                <li class="divider">
                </li>
                <li>
                <%= link_to("Logout", :controller => "access", :action => 'logout') %>
                </li>
              </ul>
            </li>
          </ul>
